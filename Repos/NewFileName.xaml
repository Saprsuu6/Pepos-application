<Window x:Class="Repos.NewFileName"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Repos"
        mc:Ignorable="d"
        Title="Хранилище" WindowStyle="None" Height="100" Width="200" ResizeMode="NoResize" WindowStartupLocation="CenterOwner" Background="#FF84A226" FontSize="14">
    <DockPanel Margin="10">
        <TextBlock  DockPanel.Dock="Top" Text="Введите новое название:"/>
        <TextBox DockPanel.Dock="Top" Name="New" FontSize="14" TextChanged="New_TextChanged"/>

        <UniformGrid Columns="2">
            <Button Content="Применить" Name="Apply" Margin="0,5,5,0" Click="Apply_Click"/>
            <Button Content="Отменить" Name="Cancel" Margin="5,5,0,0" Click="Cancel_Click"/>
        </UniformGrid>
    </DockPanel>
</Window>
